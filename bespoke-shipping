                } else {
                        $tariffa_economy_domestic += $tar_economy_domestic_bimbosmart;
                        $tariffa_standard_domestic += $tar_economy_domestic_bimbosmart;
                        $tariffa_espressa_domestic += $tar_economy_domestic_bimbosmart;

