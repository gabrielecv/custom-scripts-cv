                elseif ($prezzo_per_venditore[$indice_CartoniUova] >= 2001 and $prezzo_per_venditore[$indice_CartoniUova] < 3001) { $indice = 2; }
                elseif ($prezzo_per_venditore[$indice_CartoniUova] >= 3001 and $prezzo_per_venditore[$indice_CartoniUova] < 5001) { $indice = 3; }
