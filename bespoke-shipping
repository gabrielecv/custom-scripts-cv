            if (isset($i['tags']) && in_array('battiscopa prezzo al metro lineare',$i['tags'])) {
	    	    $tagspeciali_per_venditore[$key] =  "spedizione_metro_lineare";// aggiungo tag speciale
	    	    $peso_per_venditore[$key] -= $i['grams'] * $i['quantity'];
            } elseif ( $i['type'] == "Fai da te/Prodotti per la costruzione/Materiali da costruzione/Pavimenti/Materiali per pavimenti/Battiscopa" || in_array('free-shipping',$i['tags'])){
                $peso_per_venditore[$key] -= $i['grams'] * $i['quantity'];
            }
        }

    }
    print_r($peso_per_venditore);
    print_r($prezzo_per_venditore);


